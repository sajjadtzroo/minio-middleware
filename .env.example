# Bot Configuration - Supports both formats:
BOT_TELEGRAM=relic<1111111111:AAA-your-telegram-token-here>,backup<2222222222:BBB-backup-telegram-token>
BOT_INSTAGRAM=primary<4444444444:DDD-instagram-token>
BOT_TRACKER=relic<5555555555:EEE-tracker-token>
BOT_INFLUENCER=main<7777777777:GGG-influencer-main>

# MinIO Configuration
# Format: just domain:port WITHOUT http:// or https://
# Examples:
# - For local: localhost:9000 or 127.0.0.1:9000
# - For production: minio.example.com:9000
# - For S3: s3.amazonaws.com
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESSKEY=CHANGE_ME_minio_access_key
MINIO_SECRETKEY=CHANGE_ME_minio_secret_key
MINIO_USE_SSL=false

# JWT Configuration
JWT_KEY=CHANGE_ME_jwt_secret_at_least_32_chars

# Other Configuration
DEST_CHAT_ID=-1001234567890
SNITCH_URL=
INSTAGRAM_API=your-instagram-api-token

# دانلود مستقیم از API تلگرام (true/false)
# true = دانلود از api.telegram.org
# false = دانلود از پروکسی/سرور محلی
TELEGRAM_DIRECT_DOWNLOAD=false

# Retry Strategy (اگه پروکسی 404 بده)
# آیا دوباره تلاش کنه؟ (true/false)
TELEGRAM_RETRY_ON_PROXY_FAIL=true

# تاخیر بین هر retry (به ثانیه)
TELEGRAM_RETRY_DELAY=2

# Fallback به API تلگرام اگه پروکسی fail شد (true/false)
# اگه false باشه، بعد از fail پروکسی ارور میده
TELEGRAM_FALLBACK_TO_API=true

# تعداد بات‌ها برای racing mode
MAX_RACING_BOTS=2

# Telegram API Base URL (default: https://api.telegram.org)
TELEGRAM_API_BASE_URL=https://api.telegram.org

# Instagram API Base URL (default: https://api.hikerapi.com)
INSTAGRAM_API_BASE_URL=https://api.hikerapi.com

# TG Observer URL (default: https://tgobserver.darkube.app)
TGOBSERVER_URL=https://tgobserver.darkube.app

# CORS Allowed Origins (comma-separated, default: * for all)
CORS_ALLOWED_ORIGINS=http://localhost:3000